{
  "layouts" : {
    "basic": {
      "before": ["header","navbar","breadcrumbs"],
      "after": ["footer"]
    },
    "simple": {
      "before": ["header", "navbar"],
      "after": ["footer"]
    }
  },
  "globals" : {
        "app_name" : "My framework",
        "app_version" : "0.0.2",
        "app_author"  : "Loris Rossi",
        "app_description" : "MVC PHP Framework",
        "app_keywords"  :  ["test","test2","test3"],
        "contact" : "loris.rossi@outlook.com"
  },
  "locations" : {
      "models" : "app/models",
      "services": "app/services",
      "shared": "app/services/#shared",
      "libs": "app/vendor",
      "public": "public",
      "logs": "logs"
  },
  "environment" : {
      "current" : "dev",
      "dev": {
        "log": true,
        "logTemplate" : "[{request_datetime}][{environment}][{client_ip} {client_browser} {client_os}][{request_method} {request_resource}]:{message}",
        "buildRoutesMap": true,
        "buildRelationalMap": false,
        "buildSharedMap": true,
        "buildSiteMap": false
      },
      "prod": {
        "log": true,
        "logTemplate" : "[{request_datetime}][{environment}][{client_ip} {client_browser} {client_os}][{request_method} {request_resource}]:{message}",
        "buildRoutesMap": false,
        "buildRelationalMap": false,
        "buildSharedMap": false,
        "buildSiteMap": false
      }
  },
  "persistences" : {
    "localhost" : {
      "connectionString" : "mysql:host=localhost;root;;"
    }
  },
  "cors" : {

  }
}